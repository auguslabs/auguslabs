---
/**
 * Página MAKERS
 * 
 * Muestra los integrantes del equipo de AugusLabs
 * con diseño minimalista y profesional
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import { MakersGrid } from '@/components/ui/MakersGrid';
import { makers } from '@/data/mock/makers';

---

<BaseLayout title="Makers - Auguslabs">
  <!-- Contenido de la página MAKERS - Fondo azul más suave (tint 50) -->
  <section class="w-full bg-white pt-20 md:pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb Navigation -->
      <div class="mb-6">
        <nav class="text-sm italic" style="color: #07549b;">
          <a href="/" class="hover:opacity-80 transition-opacity" style="color: #07549b;">Home</a>
          <span class="mx-2">/</span>
          <span style="color: #07549b;">Makers</span>
        </nav>
      </div>

      <!-- Descripción -->
      <div class="mb-12">
        <p class="text-base md:text-lg text-gray-700 max-w-3xl mx-auto text-center leading-relaxed">
          The team behind AugusLabs: creative professionals dedicated to bringing your digital vision to life.
        </p>
      </div>

      <!-- Grid de makers -->
      <MakersGrid client:load makers={makers} />

      <!-- CTA Section -->
      <div class="text-center py-12 mt-16">
        <h2 
          class="text-2xl md:text-3xl font-bold mb-6"
          style="color: #07549b;"
        >
          Ready to work with us?
        </h2>
        <p class="text-lg text-gray-700 mb-8 max-w-2xl mx-auto">
          Let's discuss how we can bring your digital vision to life together.
        </p>
        <a 
          href="/contact"
          class="inline-block px-8 py-4 text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg"
          style="background-color: #9b4f07;"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Animación suave para los cards */
  :global(.makers-grid > *) {
    animation: fadeIn 0.6s ease-out forwards;
  }

  :global(.makers-grid > *:nth-child(1)) {
    animation-delay: 0.1s;
  }

  :global(.makers-grid > *:nth-child(2)) {
    animation-delay: 0.2s;
  }

  :global(.makers-grid > *:nth-child(3)) {
    animation-delay: 0.3s;
  }

  :global(.makers-grid > *:nth-child(4)) {
    animation-delay: 0.4s;
  }
</style>

