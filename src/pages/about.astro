---
/**
 * ABOUT Page
 * 
 * Minimalist page with essential information about AugusLabs
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import {
  CommandLineIcon,
  LightBulbIcon,
  ChatBubbleOvalLeftEllipsisIcon,
  GlobeAmericasIcon,
} from '@heroicons/react/24/outline';

---

<BaseLayout title="About - Auguslabs">
  <section class="w-full bg-white" style="padding-top: 1.5rem; padding-bottom: 3rem;">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb Navigation -->
      <div class="mb-6">
        <nav class="text-sm italic" style="color: #07549b;">
          <a href="/" class="hover:opacity-80 transition-opacity" style="color: #07549b;">Home</a>
          <span class="mx-2">/</span>
          <span style="color: #07549b;">About</span>
        </nav>
      </div>

      <!-- Header -->
      <div class="mb-16 text-center">
        <h1 
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6"
          style="color: #07549b;"
        >
          ABOUT
        </h1>
      </div>

      <!-- Company Description -->
      <div class="mb-16">
        <p class="text-lg md:text-xl text-gray-700 text-center leading-relaxed max-w-3xl mx-auto">
          AugusLabs is a web technology company focused on creating digital solutions for small businesses and startups. 
          Our multidisciplinary team works virtually across three countries—United States, Brazil, and Colombia—bringing together diverse perspectives to deliver innovative digital experiences.
        </p>
      </div>

      <!-- Key Information Grid -->
      <div class="grid md:grid-cols-2 gap-8 mb-16">
        <!-- Services -->
        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 text-center">
          <div class="mb-4 flex justify-center">
            <CommandLineIcon
              className="text-[#07549b]"
              style={{ width: '3rem', height: '3rem' }}
            />
          </div>
          <h3 
            class="text-lg font-semibold mb-2"
            style="color: #07549b;"
          >
            Services
          </h3>
          <p class="text-gray-700 text-sm">
            Web Design & Development<br />
            Digital Identity & Branding
          </p>
        </div>

        <!-- Focus -->
        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 text-center">
          <div class="mb-4 flex justify-center">
            <LightBulbIcon
              className="text-[#07549b]"
              style={{ width: '3rem', height: '3rem' }}
            />
          </div>
          <h3 
            class="text-lg font-semibold mb-2"
            style="color: #07549b;"
          >
            Focus
          </h3>
          <p class="text-gray-700 text-sm">
            Small Businesses<br />
            Startups
          </p>
        </div>

        <!-- Bilingual -->
        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 text-center">
          <div class="mb-4 flex justify-center">
            <ChatBubbleOvalLeftEllipsisIcon
              className="text-[#07549b]"
              style={{ width: '3rem', height: '3rem' }}
            />
          </div>
          <h3 
            class="text-lg font-semibold mb-2"
            style="color: #07549b;"
          >
            Bilingual
          </h3>
          <p class="text-gray-700 text-sm">
            English & Spanish<br />
            Bicultural Approach
          </p>
        </div>

        <!-- Location -->
        <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200 text-center">
          <div class="mb-4 flex justify-center">
            <GlobeAmericasIcon
              className="text-[#07549b]"
              style={{ width: '3rem', height: '3rem' }}
            />
          </div>
          <h3 
            class="text-lg font-semibold mb-2"
            style="color: #07549b;"
          >
            Location
          </h3>
          <p class="text-gray-700 text-sm">
            California, USA<br />
            Brazil & Colombia
          </p>
        </div>
      </div>

      <!-- CTAs Section -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 py-8">
        <!-- CTA Section: Services -->
        <div class="text-center p-3">
          <p class="text-gray-700 mb-6">
            Explore our solutions.
          </p>
          <a 
            href="/solutions"
            class="inline-block px-8 py-4 text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg"
            style="background-color: #07549b;"
          >
            View solutions
          </a>
        </div>

        <!-- CTA Section: Experiences -->
        <div class="text-center p-3">
          <p class="text-gray-700 mb-6">
            See what we’ve built.
          </p>
          <a 
            href="/experiences"
            class="inline-block px-8 py-4 text-white font-semibold rounded-lg shadow-lg transition-opacity hover:opacity-90 bg-gradient-to-b md:bg-gradient-to-r from-[#07549b] to-[#9b4f07]"
          >
            Discover experiences
          </a>
        </div>

        <!-- CTA Section: Team -->
        <div class="text-center p-3">
          <p class="text-gray-700 mb-6">
            Meet the AugusLabs team.
          </p>
          <a 
            href="/makers"
            class="inline-block px-8 py-4 text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg"
            style="background-color: #9b4f07;"
          >
            Get to know us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
