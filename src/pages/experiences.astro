---
/**
 * Página EXPERIENCES
 * 
 * Muestra los proyectos realizados por AugusLabs
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import { ProjectsGrid } from '@/components/ui/ProjectsGrid';
import { projects } from '@/data/mock/projects';

---

<BaseLayout title="Experiences - Auguslabs">
  <!-- Contenido de la página EXPERIENCES -->
  <section class="w-full bg-white pt-20 md:pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb Navigation -->
      <div class="mb-6">
        <nav class="text-sm italic" style="color: #07549b;">
          <a href={BASE_URL} class="hover:opacity-80 transition-opacity" style="color: #07549b;">Home</a>
          <span class="mx-2">/</span>
          <span style="color: #07549b;">Experiences</span>
        </nav>
      </div>

      <!-- Descripción -->
      <div class="mb-12">
        <p class="text-base md:text-lg text-gray-700 max-w-3xl mx-auto text-center leading-relaxed">
          Explore our portfolio of completed projects: innovative digital solutions that have transformed businesses and created exceptional user experiences.
        </p>
      </div>

      <!-- Grid de proyectos -->
      <ProjectsGrid client:load projects={projects} />

      <!-- CTA Final -->
      <div class="mt-16 md:mt-20 text-center px-6 py-12 md:py-16 rounded-lg" style="background-color: #07549b;">
        <h2 class="text-2xl md:text-3xl font-semibold mb-6 text-white">
          Have a project in mind?
        </h2>
        <a
          href="/contact"
          class="inline-block px-8 py-4 text-lg md:text-xl font-bold rounded-lg transition-all duration-200 hover:opacity-90 hover:scale-105"
          style="background-color: #ffffff; color: #9b4f07;"
        >
          Let's Start Your Project
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.3s ease-out;
  }
</style>
