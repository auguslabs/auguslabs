---
/**
 * P치gina ARTISTRY
 * 
 * Muestra el proceso creativo de AugusLabs: c칩mo trabajamos,
 * c칩mo nos enfocamos en escuchar, entender y proponer soluciones.
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import { ProcessTimeline, TechnologyCarousel } from '@/components/ui';
import { processSteps } from '@/data/mock/artistry';
import { getWebTechnologies, getAudiovisualTechnologies, getToolTechnologies } from '@/data/mock/technologies';

const BASE_URL = import.meta.env.BASE_URL;

---

<BaseLayout title="Artistry - Auguslabs">
  <!-- Contenido de la p치gina ARTISTRY -->
  <section class="w-full bg-white pt-20 md:pt-24 pb-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb Navigation -->
      <div class="mb-6">
        <nav class="text-sm italic" style="color: #07549b;">
          <a href="/" class="hover:opacity-80 transition-opacity" style="color: #07549b;">Home</a>
          <span class="mx-2">/</span>
          <span style="color: #07549b;">Artistry</span>
        </nav>
      </div>

      <!-- Header Section -->
      <div class="mb-16 text-center">
        <h1 
          class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4"
          style="color: #07549b;"
        >
          ARTISTRY
        </h1>
        <p 
          class="text-lg md:text-xl mb-6"
          style="color: #07549b;"
        >
          Our Process
        </p>
        <p class="text-base md:text-lg text-gray-700 max-w-3xl mx-auto leading-relaxed">
          Creative expression and artistic innovation: where design meets digital artistry to create memorable visual experiences. 
          Learn how we work to transform your ideas into reality.
        </p>
      </div>

      <!-- Section 1: The Process -->
      <section class="mb-20">
        <h2 
          class="text-2xl md:text-3xl font-bold mb-12 text-center"
          style="color: #07549b;"
        >
          The Process
        </h2>
        <ProcessTimeline client:load steps={processSteps} />
      </section>

      <!-- Section 2: Our Approach -->
      <section class="mb-20">
        <h2 
          class="text-2xl md:text-3xl font-bold mb-12 text-center"
          style="color: #07549b;"
        >
          Our Approach
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
            <h3 
              class="text-lg font-semibold mb-3"
              style="color: #07549b;"
            >
              Bilingual & Bicultural
            </h3>
            <p class="text-gray-700 text-sm leading-relaxed">
              We understand cultural nuances of clients in English and Spanish.
            </p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
            <h3 
              class="text-lg font-semibold mb-3"
              style="color: #07549b;"
            >
              AI Integration
            </h3>
            <p class="text-gray-700 text-sm leading-relaxed">
              We use artificial intelligence to optimize processes, not to replace human creativity.
            </p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
            <h3 
              class="text-lg font-semibold mb-3"
              style="color: #07549b;"
            >
              Agile Solutions
            </h3>
            <p class="text-gray-700 text-sm leading-relaxed">
              Fast results without sacrificing quality.
            </p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
            <h3 
              class="text-lg font-semibold mb-3"
              style="color: #07549b;"
            >
              Constant Communication
            </h3>
            <p class="text-gray-700 text-sm leading-relaxed">
              Collaborative process with multiple meetings.
            </p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-sm border border-gray-200">
            <h3 
              class="text-lg font-semibold mb-3"
              style="color: #07549b;"
            >
              ROI Focus
            </h3>
            <p class="text-gray-700 text-sm leading-relaxed">
              We measure tangible results for you and for us.
            </p>
          </div>
        </div>
      </section>

      <!-- Section 3: Our Technology -->
      <section class="mb-20">
        <h2 
          class="text-2xl md:text-3xl font-bold mb-12 text-center"
          style="color: #07549b;"
        >
          Our Technology
        </h2>
        
        <!-- Design & Audiovisual -->
        <div class="mb-12">
          <TechnologyCarousel 
            client:load
            technologies={getAudiovisualTechnologies()}
            category="Design & Audiovisual"
          />
        </div>

        <!-- Web Development -->
        <div class="mb-12">
          <TechnologyCarousel 
            client:load
            technologies={getWebTechnologies()}
            category="Web Development"
          />
        </div>

        <!-- Tools -->
        <div class="mb-12">
          <TechnologyCarousel 
            client:load
            technologies={getToolTechnologies()}
            category="Tools"
          />
        </div>
      </section>

      <!-- Section 5: Final CTA -->
      <section class="text-center py-12">
        <h2 
          class="text-2xl md:text-3xl font-bold mb-6"
          style="color: #07549b;"
        >
          Do you have a project in mind?
        </h2>
        <p class="text-lg text-gray-700 mb-8">
          Let's make it real
        </p>
        <a 
          href={`${BASE_URL}contact`}
          class="inline-block px-8 py-4 text-white font-semibold rounded-lg hover:opacity-90 transition-opacity shadow-lg"
          style="background-color: #9b4f07;"
        >
          Start Your Project
        </a>
      </section>
    </div>
  </section>
</BaseLayout>



